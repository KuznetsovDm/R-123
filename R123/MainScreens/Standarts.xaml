<Page x:Class="R123.MainScreens.Standarts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:R123.MainScreens"
        mc:Ignorable="d"
        d:DesignWidth="1280" d:DesignHeight="1024">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="Focusable" Value="False"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>
    <Grid Background="#E8E6EA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Frame x:Name="frame_Frame" Grid.Row="0" NavigationUIVisibility="Hidden" VerticalAlignment="Top"/>

        <StackPanel Grid.Row="0" Grid.Column="1" Name="TaskPanel" Margin="5" Visibility="Visible">
            <TextBlock Text="Выберете номер задачи:"/>
            <ListBox Name="LisBoxtOfTasks" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemContainerStyle>
                    <Style>
                        <Setter Property="ListBoxItem.Background" Value="LightSlateGray"/>
                        <Setter Property="ListBoxItem.Margin" Value="5"/>
                        <Setter Property="ListBoxItem.Padding" Value="5"/>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontFamily="Times New Roman" FontSize="18" TextWrapping="Wrap"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Content ="Начать задание" Click="RunSelectedItem"/>
        </StackPanel>

        <StackPanel Name="CurrentTaskPanel" Grid.Row="0" Grid.Column="1" Visibility="Hidden">
            <TextBlock Text="Описание задачи:"/>
            <StackPanel Name="TaskDescriptionsPanel"/>
            <TextBlock Name="Timer" Text="Потраченное время: 0 секунд"/>
            <StackPanel Name="TaskResultPanel" Visibility="Hidden" Orientation="Horizontal">
                <TextBlock Text="Состояние: "/>
                <TextBlock Name="TaskResult"/>
            </StackPanel>
            <Button Name="ComeBackTask" Content="Вернуться к задачам." Visibility="Hidden" Click="ComeBackTask_Click"/>
        </StackPanel>
    </Grid>
</Page>
