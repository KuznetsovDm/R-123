<UserControl x:Class="R123.NewRadio.View.ContinuouslyRotating"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:R123.NewRadio.View"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" RenderTransformOrigin="0.5,0.5">
    <UserControl.RenderTransform>
        <TransformGroup>
            <RotateTransform x:Name="DefaultRotateTransform" Angle="0"/>
        </TransformGroup>
    </UserControl.RenderTransform>
    <Image x:Name="TheImage" RenderTransformOrigin="0.5,0.5">
        <Image.RenderTransform>
            <TransformGroup>
                <RotateTransform x:Name="RotateControl" Angle="0"/>
            </TransformGroup>
        </Image.RenderTransform>
    </Image>
</UserControl>
