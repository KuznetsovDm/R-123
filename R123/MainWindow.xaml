<Window x:Class="R123.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:R123"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="Р-123" WindowStartupLocation="CenterScreen"
        d:DesignWidth="1280" d:DesignHeight="1024"
        WindowState="Maximized" MinWidth="600" MinHeight="400">
        <!--Width="300" Height="220"
        ResizeMode="NoResize"-->
    <!--<Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Times New Roman"/>
        </Style>
    </Window.Resources>-->
    <Window.Resources>
        <local:TabSizeConverter x:Key="tabSizeConverter" />
        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Width">
                <Setter.Value>
                    <MultiBinding Converter="{StaticResource tabSizeConverter}">
                        <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type TabControl}}" />
                        <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type TabControl}}" Path="ActualWidth" />
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TextInTabItemHeader">
            <Setter Property="Control.Margin" Value="3" />
            <Setter Property="Control.FontSize" Value="20"/>
            <Setter Property="Control.FontFamily" Value="Times New Roman"/>
        </Style>
    </Window.Resources>
    <Grid>
        <TabControl>
            <TabItem Visibility="Hidden" Width="0">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource TextInTabItemHeader}"></TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Name="test">
                        <TextBlock Text="Программа-симулятор радиостанции Р-123М"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <!--<Ellipse Height="10" Width="10" Fill="Black" />-->
                        <TextBlock Style="{StaticResource TextInTabItemHeader}">1. Назначение, ТТХ, состав</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <Frame Name="Frame1" NavigationUIVisibility="Hidden" Grid.Column="1"/>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <!--<Rectangle Height="10" Width="10" Fill="Black" />-->
                        <TextBlock Style="{StaticResource TextInTabItemHeader}">2. Обучение</TextBlock> <!--Работа на радиостанции -->
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <Frame Name="Frame2" NavigationUIVisibility="Hidden" Grid.Column="1"/>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <!--<Rectangle Height="10" Width="10" Fill="Black" />-->
                        <TextBlock Style="{StaticResource TextInTabItemHeader}">3. Радиостанция</TextBlock> <!--Задачи -->
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <Frame Name="Frame3" NavigationUIVisibility="Hidden" Grid.Column="1"/>
                </TabItem.Content>
            </TabItem>
        </TabControl>






        <!--<Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="Выход" IsCancel="True" Click="EscButton_Click" Opacity="0"/>
        <Button Grid.Row="0" Content="Обучение" Click="ShowLearning"/>
        <Button Grid.Row="1" Content="Работа на радиостанции" Click="ShowWorkOnRadioStation"/>
        <Button Grid.Row="2" Content="Задачи" Click="ShowStandarts"/>-->
    </Grid>
</Window>
