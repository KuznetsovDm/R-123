<Window x:Class="R123.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:R123"
        mc:Ignorable="d"
        d:DesignHeight="1000" d:DesignWidth="1280"
        Title="R-123" ResizeMode="canResize" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Focusable" Value="False"/>
        </Style>
    </Window.Resources>
    <Grid>
        <!--<Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Background="White" FontSize="20" FontFamily="Times New Roman">
            <MenuItem Header="Главное меню" Click="MainMenu_Click"/>
        </Menu>-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel VerticalAlignment="Top">
            <Button Content="Назначение радиостанции Р-123"                                                                Click="Destination_Click"/>
            <Button Content="Тактико-технические характеристики"                                                           Click="Tech_Click"/>
            <Button Content="Состав"                                                                                       Click="Kit_Click"/>
            <Button Content="Порядок подготовки радиостанции к работе, установка органов управления в исходные положения"  Click="Controls_Click"/>
            <Button Content="Проверка работоспособности радиостанции"                                                      Click="Test_Click"/>
            <Button Content="Порядок настройки радиостанции на заданную частоту и вхождения в связь с корреспондентом"     Click="Ins_Click"/>
            
            <Button Content="Порядок подготовки радиостанции" IsEnabled="False"/>
            <Button Content="Проверка работоспособности радиостанции"                   Click="WorkingCapacityTest_Click"/>
            <Button Content="Работа на радиостанции"                                    Click="RadioAndTask_Click"/>
        </StackPanel>

        <Frame Name="Frame" NavigationUIVisibility="Hidden" Grid.Column="1"/>
    </Grid>
</Window>
