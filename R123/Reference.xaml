<Window x:Class="R123.Reference"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:R123"
        mc:Ignorable="d"
        Title="Справка" 
        MinWidth="600"
        Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Menu x:Name="menu" Grid.Row="0" FontSize="20" FontFamily="Times New Roman">
            <MenuItem Header="Предназначение" x:Name="dest" Click="dest_Click"></MenuItem>
            <MenuItem Header="Технические данные" x:Name="tech" Click="tech_Click"></MenuItem>
            <MenuItem Header="Элементы радиостанции" x:Name="elems" Click="elems_Click"></MenuItem>
        </Menu>
        <TextBlock x:Name="title" Grid.Row="1" FontSize="30" HorizontalAlignment="Center" FontFamily="Times New Roman"/>
        <Frame x:Name="frame" Grid.Row="2" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
